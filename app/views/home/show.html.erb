
<div class="jumbotron">
  <h1 class="display-4 text-warning">Bonjour, curieux personnage</h1>
  <p class="lead text-warning">Voici nos incroyables potins.</p>
  <hr class="my-4">
  <p class="btn btn-warning btn-sm"><%= link_to 'Notre équipe de commères', team_path %></p>
  <p class="btn btn-warning btn-sm"><%= link_to 'Nous contacter', contact_path %></p>
</div>
<div class="d-flex flex-wrap">
<% Gossip.all.each do |gossip|%>
<div class="card border-light mb-3" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">Potin numéro <%= Gossip.all.index(gossip) + 1 %></h5>
    <p class="card-text">"<%= gossip.title.capitalize %>"</p>
    <p class="card-text">Contributeur : <%= User.find(gossip.user_id).first_name %></p>
    <p class="btn btn-outline-secondary"><%= link_to 'Détails du potin', gossip_path(gossip.id) %>
  </div>
</div>
</p>
<% end %>
</div>


