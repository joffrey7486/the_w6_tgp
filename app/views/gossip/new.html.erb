
<section class="mx-auto my-3" style="width: 500px;">

        <div class="row d-flex justify-content-around">
        <h1>A toi de tout nous raconter</h1></div>

<!-- Formulaire à remplir -->

        <%= form_tag url_for(action: 'create'), method: 'post' do %>        
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

        <div class="form-group">
          <%= label_tag :gossip_title, "Annonce la couleur" %>
          <%= text_field_tag :gossip_title %>
        </div>

        <div class="form-group">
          <%= label_tag :gossip_content, "Ton plus grand secret " %>
          <%= text_field_tag :gossip_content %>
        </div>

        <div class="form-group">
          <%= "Qui es tu ?" %>
          <%= select nil, 'user', User.all.collect { |u| [ u.first_name, u.id ] }, { include_blank: true } %>
        </div>

        <div class="form-group">
          <%= "Quelle catégorie ?" %>
          <%= select nil, 'tag', Tag.all.collect { |t| [ t.title, t.id ] }, { include_blank: true } %>
        </div>

        <div  class="form-group"></div>
            <%= submit_tag 'Créer un potin',
          class: 'btn btn-outline-warning btn-md m-3' 
        %>
  <% end %>
</section>