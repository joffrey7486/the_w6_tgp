
<section class="mx-auto my-3" style="width: 500px;">
<!-- Formulaire Ã  remplir -->
<form>
     <%= form_tag url_for("create"), method: "post" do %>
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <div class="form-group">
          <%= label_tag :gossip_title, "Titre du potin" %>
          <%= text_field_tag :gossip_title %>
        </div>
        <div class="form-group">
          <%= label_tag :gossip_content, "Ton potin ! " %>
          <%= text_field_tag :gossip_content %>
        </div>
        <div class="form-group">
          <%= label_tag :gossip_user, "Quel est ton nom ?" %>
          <%= text_field_tag :user %>

          <%# <%= select :user, :id, :name_with_initial, include_blank: true %>
        </div>
        <div  class="form-group"></div>
            <%= submit_tag "J'envoie mon potin !" %>
        </div>
  <% end %>
</form>
</section>