<h2 class="font-weight-bold text-center my-4">Les villes de tous les potins</h2></div>
  <div class="d-flex flex-wrap justify-content-center">
      <% City.all.each do |city|%>
        <div class="card border-info my-2 mx-3 border-radius rounded" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">Ville de <%= city.name.capitalize %></h5>
            <p class="card-text">Code postal : <%= city.zip_code %></p>
            <p class="btn btn-outline-warning"><%= link_to 'Profil de la ville', city_path(city.id) %>
          </div>
        </div>
      </p>
    <% end %>
  </div>
