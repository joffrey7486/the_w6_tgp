
<section class="mx-auto" style="width: 500px;">

  <div class="row d-flex justify-content-around">
  
<!--Grid column-->
  <div class="col-md-9 mb-md-0 mb-5">
  <br>
  <h2 class="h3-responsive font-weight-bold text-center my-4">LÃ¢che un commentaire !</h2>
            <%= form_tag url_for(action: 'create'), method: 'post', class: 'contact-form', id: 'contact-form' do %>        

                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-12">
                        <div class="md-form mb-0 form-group">
                          <%= label_tag :comment_content, "Ton commentaire" %>
                          <%= text_field_tag :comment_content , nil, class: 'form-control' %>
                        </div>
                      </div>

                    <!--Grid column-->

                </div>

                <!--Grid row-->
              <% if false %>
                <!--Grid row-->
                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-0 form-group">
                          <%= label_tag "Qui es tu ?" %><br>
                          <%= select nil, 'user', User.all.collect { |u| [ u.first_name, u.id ] }, { include_blank: true } , class: 'form-control' %>
                        </div>
                    </div>
                </div>
              <% end %>

            <br>

                <div class="text-center text-md-left">
                  <%= submit_tag 'Soumettre ce commentaire', class: 'btn btn-primary form-control' %>
                </div>
          
                <div class="status"></div>
          <% end %>

</section>